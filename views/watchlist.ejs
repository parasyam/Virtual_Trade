<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>InvestGo - Watchlist</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet">
  <style>
    html, body {
      height: 100%;
      width: 100%;
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: white;
    }

    nav img {
      height: 10vh;
    }

    .navbar-nav .nav-item .nav-link {
      font-size: 16px;
    }

    .remove-button {
      background-color: red;
      color: white;
      border: none;
      padding: 8px 12px;
      cursor: pointer;
      border-radius: 5px;
    }

    .remove-button:hover {
      background-color: darkred;
    }

    .add-btn {
      background-color: green;
      color: white;
      border-radius: 5px;
      padding: 8px 16px;
      margin-bottom: 20px;
      border: none;
      cursor: pointer;
    }

    .add-btn:hover {
      background-color: darkgreen;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><img src="/logo-removebg-preview.png" alt="Logo"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" href="../index.html">Home</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>My Watchlist</h2>

    <!-- Add Stock Button -->
    <button class="add-btn" onclick="addStock()">Add Stock</button>

    <div class="row">
      <% if (watchlist.length > 0) { %>
        <% watchlist.forEach(stock => { %>
          <div class="col-md-4">
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title"><%= stock.symbol %></h5>
                <p class="card-text">Price Today: â‚¹<%= stock.currentPrice %></p>
                <p class="card-text">Change: <%= stock.changePercent %> %</p>
                <button class="remove-button" onclick="removeStock('<%= stock.symbol %>')">Remove</button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No stocks in your watchlist.</p>
      <% } %>
    </div>
  </div>

  <script>
    // Remove stock function
    async function removeStock(stockName) {
      try {
        const response = await fetch("/stock/remove-watchlist", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ stockName })
        });

        const data = await response.json();
        if (!response.ok) {
          alert(data.error || "Failed to remove stock.");
          return;
        }

        alert("Stock removed successfully!");
        window.location.reload();
      } catch (err) {
        console.error("Error removing stock:", err);
        alert("Failed to communicate with the server.");
      }
    }

    // Add stock function
    async function addStock() {
      const stockName = prompt("Enter Stock Symbol (e.g., AAPL, TSLA):");
      if (!stockName) return;

      try {
        const response = await fetch("/watchlist/add", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ stockName: stockName.toUpperCase() })
        });

        const data = await response.json();
        if (!response.ok) {
          alert(data.error || "Failed to add stock.");
          return;
        }

        alert("Stock added successfully!");
        window.location.reload();
      } catch (err) {
        console.error("Error adding stock:", err);
        alert("Failed to communicate with the server.");
      }
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
